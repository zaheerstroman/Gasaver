<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/cv_station"
    android:layout_width="180dp"
    android:layout_height="wrap_content"
    app:cardCornerRadius="15dp"
    app:cardElevation="10dp"
    android:background="@drawable/buttonshape_red"
    >

    <RelativeLayout
        android:layout_width="180dp"
        android:layout_height="match_parent"
        android:padding="10dp"
        android:background="@drawable/buttonshape_purpule_less"
        >

        <ImageView
            android:id="@+id/iv_close"
            android:layout_width="@dimen/_30sdp"
            android:layout_height="@dimen/_30sdp"
            android:layout_alignParentRight="true"
            android:layout_gravity="end"


            android:src="@drawable/close_blue_icon" />

<!--        <TextView-->
<!--            android:id="@+id/txtLocationName"-->
<!--            android:layout_width="wrap_content"-->
<!--            android:layout_height="wrap_content"-->
<!--            android:gravity="center_horizontal"-->
<!--            android:maxLines="1"-->
<!--            android:text="Prince Oizza"-->
<!--            android:textColor="@color/black"-->
<!--            android:textSize="20dp"-->
<!--            android:textStyle="bold" />-->



        <LinearLayout
            android:id="@+id/priceLayout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="00dp"
            android:orientation="horizontal"
            >

            <TextView
                android:id="@+id/txtPrices"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Price : "
                android:textColor="@color/itemTextColor"
                android:textStyle="bold"
                android:textSize="26dp"
                />

            <TextView
                android:id="@+id/txtPriceLocationDistance"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:maxLines="1"
                android:text="89"
                android:textColor="@color/itemTextColor"
                android:textStyle="bold"
                android:textSize="26dp"/>


        </LinearLayout>



    </RelativeLayout>

</androidx.cardview.widget.CardView>