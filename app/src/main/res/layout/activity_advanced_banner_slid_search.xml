<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    android:orientation="vertical"
    tools:context=".activity.AdvancedBannerSlidSearchActivity">
    <include layout="@layout/layout_toolbar" />

<!--    profile layout-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/_120sdp"
        android:background="@color/profile_bg_color"
        android:orientation="horizontal">

            <com.google.android.material.imageview.ShapeableImageView
                android:id="@+id/iv_profile_img"
                android:layout_width="@dimen/_70sdp"
                android:layout_height="@dimen/_80sdp"
                android:layout_gravity="top"
                android:layout_marginLeft="02dp"
                android:paddingTop="10dp"
                android:scaleType="fitXY"
                android:src="@drawable/profile_img"
                android:layout_margin="5sp"
                app:shapeAppearanceOverlay="@style/circleImageViewStyle" />


            <com.google.android.material.imageview.ShapeableImageView
                android:id="@+id/iv_profile_img2"
                android:layout_width="@dimen/_70sdp"
                android:layout_height="@dimen/_80sdp"
                android:layout_gravity="top"
                android:layout_marginLeft="02dp"
                android:paddingTop="10dp"

                android:layout_margin="5sp"
                android:scaleType="fitXY"
                android:layout_below="@+id/iv_profile_img"
                android:src="@drawable/profile_img"

                app:shapeAppearanceOverlay="@style/circleImageViewStyle" />

            <com.google.android.material.imageview.ShapeableImageView
                android:id="@+id/iv_profile_img3"
                android:layout_width="@dimen/_70sdp"
                android:layout_height="@dimen/_80sdp"
                android:layout_gravity="top"

                android:layout_margin="5sp"
                android:layout_marginLeft="02dp"
                android:paddingTop="10dp"
                android:scaleType="fitXY"
                android:src="@drawable/profile_img"

                app:shapeAppearanceOverlay="@style/circleImageViewStyle" />

            <com.google.android.material.imageview.ShapeableImageView
                android:id="@+id/iv_profile_img4"
                android:layout_width="@dimen/_70sdp"
                android:layout_height="@dimen/_80sdp"
                android:layout_gravity="top"

                android:layout_margin="5sp"
                android:layout_marginLeft="02dp"
                android:paddingTop="10dp"
                android:scaleType="fitXY"
                android:src="@drawable/profile_img"

                app:shapeAppearanceOverlay="@style/circleImageViewStyle" />

    </LinearLayout>


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/_10sdp"
        android:layout_marginRight="@dimen/_10sdp"
        android:layout_marginBottom="@dimen/_10sdp"
        android:orientation="horizontal">
        <ImageView
            android:id="@+id/iv_left_nav_viewpager"
            android:layout_width="@dimen/_20sdp"
            android:layout_height="@dimen/_20sdp"
            android:layout_centerVertical="true"

            android:src="@drawable/icon_left_arrow" />
        <androidx.viewpager.widget.ViewPager
            android:id="@+id/view_pager"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="@dimen/_10sdp"
            android:layout_marginRight="@dimen/_10sdp"
            android:layout_marginBottom="@dimen/_10sdp"
            android:background="@drawable/button_bg_curve_white" />




        <ImageView
            android:id="@+id/iv_right_nav_viewpager"
            android:layout_width="@dimen/_20sdp"
            android:layout_height="@dimen/_20sdp"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:src="@drawable/icon_right_arrow" />

    </RelativeLayout>




</LinearLayout>